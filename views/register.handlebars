<div class="container pt-2">

	<h1 class="font-italic m-4">EDDIeApp</h1>
	<p class="h3">Register an Account</p>
	<form class="form-group" method="POST" action="createAccount?form=register">
		<label for="fieldFirstName">First Name:</label>
		<input class="form-controls"type="text" name="fname" placeholder="Enter Your First Name" required>
		<br>
		<label for="fieldLastName">Last Name:</label>
		<input class="form-controls"type="text" name="lname" placeholder="Enter Your Last Name" required>
		<br>
		<label for="fieldEmail">Email&nbsp;&nbsp;:</label>
		<input class="form-controls"type="email" name="email" placeholder="Enter Your Email" required>
		<br>
		<label for="fieldUserName">Username:</label>
		<input class="form-controls" type="text" name="username" placeholder="Enter Your Username" required>
		<br>
		<label for="fieldPassword">Password:</label>
		<input class="form-controls"type="password" name="password" placeholder="Enter Your Password" required/>

		<button class="btn btn-primary" type="submit" value="Submit">Submit</button>

	
	</form>
</div>